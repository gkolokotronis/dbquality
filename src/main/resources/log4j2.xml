<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} (%-5level) %class{36} (%L) %M - %msg%xEx%n"/>
		</Console>
		<File name="log" fileName="logs/dbquality.log" append="true">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} (%-5level) %class{36} (%L) %M - %msg%xEx%n"/>
		</File>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="log"/>
		</Root>
	</Loggers>
</Configuration>